# test keyfile

# system
BOX_SIZE 200

# simulation settings
MC_TEMP            0.5
N_STEPS            100000000
PREEQ_STEPS        10000000
PREEQ_TEMP         50.0
MC_MAX_TRIALS      2
MC_TEMP_MODE       3
MC_DELTA_TEMP      0.1
MC_CYCLE_NUM       10
MC_INDENT_MODE     1
ROT_ENERGY_BIAS    0.0 #exp(-beta*E_sol) where E_sol is the energy of interacting with solution

# MC move frequencies
MV_TRANS_FREQ      0.3   # translation
MV_CLSTR_FREQ      0.003 # cluster translation
MV_SMALLCLSTR_FREQ 0.3   # small cluster translation
MV_FACEC_FREQ      3.0   # face change
MV_LOCAL_FREQ      3.0   # local move
MV_SNAKE_FREQ      0.0   # slithering snake
MV_DBPVT_FREQ      0.0   # double pivot
MV_COLOCAL_FREQ    3.0   # co-local
MV_SHAKE_FREQ      0.0   # shake
MV_PIVOT_FREQ      0.0   # pivot
MV_BRROT_FREQ      0.3   # branched rotate

# external files
STRUCT_FILETYPE         0  # 0 - prm, 1 - dat
STRUCT_FILE    structure.prm
ENERGY_FILE    energy.prm

# random number generator
RANDOM_SEED 0

# report
REPORT_PREFIX       ORun
REPORT_LOG_FREQ     5000000
REPORT_ENERGY_FREQ  5000000
REPORT_CONFIG_FREQ  2500000
REPORT_MCMOVE_FREQ  2500000
REPORT_NETWORK_FREQ 2000000
REPORT_RDFTOT_FREQ  2000000
